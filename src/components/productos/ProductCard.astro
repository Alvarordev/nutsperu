---
import Button from "../common/Button.astro";
import type { Product } from "../../types/product";

interface Props {
    product: Product;
}

const { product } = Astro.props;
---

<a
    href={`/productos/${product.slug}`}
    class="flex flex-col group cursor-pointer border-2 rounded-lg transition-transform duration-300 hover:scale-105"
>
    <div class="bg-primary-muted p-4 aspect-square rounded-lg w-full mb-2">
        <img
            src={product.images[0].src}
            alt={product.name}
            class="w-full h-full object-contain drop-shadow-xl"
        />
    </div>

    <h3
        class="text-start px-4 text-lg md:text-xl font-bold font-title text-foreground mb-4"
    >
        {product.name}
    </h3>

    <div class="px-4 flex flex-1 items-end pb-4">
        <Button size="sm" class="w-full font-semibold!">
            Ver Presentaciones
        </Button>
    </div>
</a>
