---
import trabajoImage from "../../assets/trabajo-gemini.png";
import Button from "../common/Button.astro";
import { ArrowRight, Leaf, Truck, ShieldCheck, Factory } from "@lucide/astro";

const steps = [
  {
    icon: Leaf,
    title: "Selección de Origen",
    description:
      "Trabajamos directamente con agricultores para asegurar la mejor materia prima.",
  },
  {
    icon: Factory,
    title: "Procesamiento Artesanal",
    description:
      "Tostamos nuestros frutos secos en pequeños lotes para garantizar frescura.",
  },
  {
    icon: ShieldCheck,
    title: "Control de Calidad",
    description:
      "Estrictos estándares sanitarios y de selección en cada etapa.",
  },
  {
    icon: Truck,
    title: "Logística Eficiente",
    description: "Entregas puntuales y seguras a todo Lima y provincias.",
  },
];
---

<section class="bg-background py-12 px-6 md:px-0">
  <div
    class="max-w-300 mx-auto bg-primary rounded-xl text-white overflow-hidden relative p-6 md:p-10"
  >
    <div
      class="absolute top-0 right-0 w-1/3 h-full bg-white/5 skew-x-12 pointer-events-none"
    >
    </div>

    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center relative z-10">
      <div class="flex flex-col gap-6">
        <div class="space-y-4">
          <h2 class="font-title font-black text-3xl md:text-4xl leading-tight">
            Cómo Trabajamos
          </h2>
          <p class="text-white/80 text-base md:text-lg max-w-md">
            Un proceso transparente y dedicado para ofrecerte la mejor calidad
            del mercado.
          </p>
        </div>

        <div class="flex flex-col gap-2">
          {
            steps.map((step) => (
              <div class="group flex items-center justify-between p-3 rounded-2xl hover:bg-white/10 transition-all duration-300 cursor-pointer border border-transparent hover:border-white/10">
                <div class="flex items-center gap-4">
                  <div class="p-2.5 bg-secondary text-foreground rounded-xl group-hover:bg-white group-hover:text-foreground transition-colors duration-300">
                    <step.icon class="size-5 md:size-6" stroke-width={2} />
                  </div>
                  <div class="flex flex-col gap-0.5">
                    <h3 class="font-bold text-lg">{step.title}</h3>
                    <p class="text-white/70 text-sm max-w-62.5 md:max-w-xs leading-tight">
                      {step.description}
                    </p>
                  </div>
                </div>
                <ArrowRight class="size-5 text-accent opacity-0 -translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300" />
              </div>
            ))
          }
        </div>

        <div class="mt-2">
          <Button variant="primary" size="lg" class="w-full md:w-auto">
            Ver catálogo completo
            <ArrowRight class="w-5 h-5 ml-2" />
          </Button>
        </div>
      </div>

      <div class="relative pt-8 lg:pt-0">
        <div class="relative">
          <div
            class="absolute -top-10 left-0 z-20 bg-primary text-background px-6 py-3 rounded-t-2xl font-title font-bold text-xl inline-block"
          >
            Nuestra Planta
          </div>

          <div
            class="relative rounded-3xl rounded-tl-none overflow-hidden h-96 md:h-112.5 shadow-2xl border-4 border-accent/20"
          >
            <img
              src={trabajoImage.src}
              alt="Proceso de trabajo en Nuts Perú"
              class="object-cover w-full h-full hover:scale-105 transition-transform duration-700 ease-out"
            />

            <div
              class="absolute bottom-4 left-4 right-4 bg-dark/80 backdrop-blur-md p-4 rounded-xl border border-white/10"
            >
              <p class="text-white text-sm md:text-base font-medium">
                "Comprometidos con la excelencia desde el origen hasta tu
                negocio."
              </p>
            </div>
          </div>

          <div
            class="absolute -bottom-6 -right-6 bg-secondary text-white p-6 rounded-full shadow-lg hidden md:block rotate-12"
          >
            <span class="font-black text-2xl font-title">100%</span>
            <span class="block text-xs font-bold uppercase tracking-wider"
              >Peruano</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
