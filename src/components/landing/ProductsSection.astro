---
import Button from "../common/Button.astro";
import { products } from "../../data/products";
---

<section class="py-20 bg-background px-4 md:px-0">
  <div>
    <div class="md:text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-black text-foreground font-title">
        Nuestros Productos
      </h2>
      <p
        class="text-lg md:text-xl text-foreground font-normal mt-3 md:mt-6 md:px-0 text-balance"
      >
        Descubre nuestra amplia gama de frutos secos y snacks saludables,
        cuidadosamente seleccionados para ti.
      </p>
    </div>

    <div
      class="grid grid-cols-2 md:grid-cols-4 gap-x-0 md:gap-x-6 gap-y-8 md:gap-y-12 max-w-300 mx-auto"
    >
      {
        products.slice(0, 12).map((product) => (
          <a href={`/productos/${product.slug}`} class="flex flex-col items-center group cursor-pointer">
            <div class="aspect-square w-full max-w-36 lg:max-w-50 mb-2 transition-transform duration-300 group-hover:scale-110">
              <img
                src={product.images[0].src}
                alt={product.name}
                class="w-full h-full object-contain drop-shadow-xl"
              />
            </div>

            <h3 class="text-center text-xl md:text-2xl font-bold font-title text-foreground mb-4">
              {product.name.split(' ')[0]}
            </h3>

            <div class="relative transition-transform duration-300">
              <Button size="lg" class="py-2! hidden! md:block!">
                Ver Producto
              </Button>
              <Button size="sm" class="font-bold! md:hidden!">
                Ver Producto
              </Button>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .clip-ribbon {
    clip-path: polygon(0% 0%, 8% 50%, 0% 100%, 100% 100%, 92% 50%, 100% 0%);
  }
</style>
