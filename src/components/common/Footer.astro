---
import logo from "../../assets/logo-white.png";
import {
  Facebook,
  Instagram,
  Mail,
  MapPin,
  Phone,
} from "@lucide/astro";

const currentYear = new Date().getFullYear();

const socialLinks = [
  { icon: Facebook, href: "#", label: "Facebook" },
  { icon: Instagram, href: "#", label: "Instagram" },
];

const contactInfo = [
  {
    icon: Mail,
    label: "Correo",
    text: "ventas.nusperusac@gmail.com",
    href: "mailto:ventas.nusperusac@gmail.com",
  },
  {
    icon: MapPin,
    label: "Ubicación",
    text: "Proveedores Unidos 290, Lima",
    href: null,
  },
  {
    icon: Phone,
    label: "Teléfono",
    text: "+51 956 903 670",
    href: "tel:+51956903670",
  },
];
---

<footer class="bg-primary text-background pt-20 pb-10 px-6 md:px-0">
  <div class="max-w-300 mx-auto grid lg:grid-cols-4 gap-12 lg:gap-8 mb-16">
    <div class="flex flex-col gap-6 lg:col-span-1">
      <a href="/" class="block w-fit">
        <img
          src={logo.src}
          alt="Nuts Peru Logo"
          class="h-20 w-auto object-contain"
        />
      </a>
      <p class="text-background text-sm leading-relaxed max-w-xs">
        Llevando las mejores nueces y frutos secos a tu mesa con calidad premium
        y origen controlado.
      </p>
      <div class="flex gap-3">
        {
          socialLinks.map((social) => (
            <a
              href={social.href}
              aria-label={social.label}
              class="p-2.5 border border-background rounded-xl hover:bg-secondary hover:text-white hover:border-secondary transition-all duration-300"
            >
              <social.icon class="size-5" stroke-width={2} />
            </a>
          ))
        }
      </div>
    </div>

    <div class="lg:col-span-1 pl-0 lg:pl-10">
      <h3 class="font-title font-bold text-xl mb-6 text-background">
        Navegación
      </h3>
      <ul class="space-y-4">
        <li>
          <a
            href="/"
            class="text-background hover:text-secondary hover:translate-x-1 transition-all inline-block"
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/nosotros"
            class="text-background hover:text-secondary hover:translate-x-1 transition-all inline-block"
            >Sobre Nosotros</a
          >
        </li>
        <li>
          <a
            href="/productos"
            class="text-background hover:text-secondary hover:translate-x-1 transition-all inline-block"
            >Nuestros Productos</a
          >
        </li>
        <li>
          <a
            href="/contacto"
            class="text-background hover:text-secondary hover:translate-x-1 transition-all inline-block"
            >Contacto</a
          >
        </li>
      </ul>
    </div>

    <div class="lg:col-span-2">
      <h3 class="font-title font-bold text-xl mb-6 text-background">
        Contáctanos
      </h3>
      <div class="grid gap-4">
        {
          contactInfo.map((info) => (
            <div class="flex items-center gap-4 group">
              <div class="text-background transition-colors">
                <info.icon class="size-6" stroke-width={2} />
              </div>
              <div class="flex flex-col">
                <span class="text-xs text-background font-medium uppercase tracking-wider mb-0.5">
                  {info.label}
                </span>
                {info.href ? (
                  <a
                    href={info.href}
                    class="font-bold text-lg text-backgroundtransition-colors"
                  >
                    {info.text}
                  </a>
                ) : (
                  <span class="font-bold text-lg text-background">
                    {info.text}
                  </span>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div
    class="max-w-300 mx-auto pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-background"
  >
    <p>© {currentYear} Nuts Peru. Todos los derechos reservados.</p>
    <div class="flex gap-6">
      <a href="#" class="hover:text-white transition-colors"
        >Política de Privacidad</a
      >
      <a href="#" class="hover:text-white transition-colors"
        >Términos y Condiciones</a
      >
    </div>
  </div>
</footer>
