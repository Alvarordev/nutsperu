---
import Layout from "../../layouts/Layout.astro";
import { products } from "../../data/products";
import ProductsFilter from "../../components/productos/ProductsFilter";
import AnimatedText from "../../components/common/AnimatedText.astro";
---

<Layout>
    <main class="w-full min-h-screen bg-background">
        <section class="bg-primary py-12 md:py-16 lg:py-20">
            <div class="flex w-full max-w-300 mx-auto px-4 lg:px-0">
                <div class="text-background max-w-full lg:max-w-200">
                    <AnimatedText
                        as="h1"
                        duration={1.8}
                        class="font-title font-black text-5xl lg:text-6xl"
                        >Nuestros Productos</AnimatedText
                    >
                    <AnimatedText
                        duration={2}
                        class="mt-4 md:mt-6 text-lg lg:text-xl font-normal"
                    >
                        Garantiza la calidad de tu producción con nuestra
                        selección premium de insumos.
                    </AnimatedText>
                </div>

                <div></div>
            </div>
        </section>
        <section class="py-12 md:py-16 lg:py-20">
            <ProductsFilter products={products} client:load />
        </section>
    </main>
</Layout>
