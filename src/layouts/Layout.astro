---
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;

const defaultTitle =
  "Nuts Peru - Frutos Secos y Snacks Saludables al por Mayor";
const siteDescription =
  "Descubre Nuts Peru, tu proveedor confiable de frutos secos y snacks saludables al por mayor. Calidad y frescura garantizadas para tu negocio.";
const siteTitle = title ? title : defaultTitle;
const ogImageURL = new URL("/og-logo.png", Astro.site || Astro.url);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap"
      rel="stylesheet"
    />

    <link
      rel="canonical"
      href={new URL(Astro.url.pathname, Astro.site || Astro.url)}
    />
    <meta name="robots" content="index, follow" />
  </head>

  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
<script>
  import Lenis from "lenis";

  const lenis = new Lenis();

  function raf(time: number): void {
    lenis.raf(time);
    requestAnimationFrame(raf);
  }

  requestAnimationFrame(raf);
</script>
